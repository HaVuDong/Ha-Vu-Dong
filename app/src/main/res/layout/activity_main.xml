<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_marginTop="50dp">

        <!-- Thanh trên cùng + tìm kiếm -->
        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#2196F3"
            android:paddingHorizontal="8dp">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="#FFFFFF" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/btnSearchIcon"
                android:layout_toEndOf="@id/btnMenu"
                android:background="@android:drawable/editbox_background"
                android:hint="Tìm kiếm..."
                android:inputType="text"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btnSearchIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#FFFFFF" />
        </RelativeLayout>

        <!-- Banner -->
        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/topBar"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/img" />

        <!-- HorizontalScrollView danh mục -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/banner"
            android:padding="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gà thịt"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_category"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="15dp"/>
                <Space
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gà Đông Tảo"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_category"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="6dp"/>
                <Space
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gà Tre"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_category"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="6dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- GridView hiển thị sản phẩm -->
        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/horizontalScrollCategories"
            android:numColumns="2"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"
            android:stretchMode="columnWidth"
            android:padding="8dp"/>
    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="#FFFFFF"
        app:menu="@menu/menu_user"
        app:headerLayout="@layout/nav_header" />
</androidx.drawerlayout.widget.DrawerLayout>
